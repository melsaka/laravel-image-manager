{
    "name": "melsaka/laravel-image-manager",
    "description": "A Laravel package for managing polymorphic images with automatic resizing and storage management",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Mohamed ElSaka",
            "email": "melsakax@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/database": "^11.0|^12.0",
        "illuminate/http": "^11.0|^12.0",
        "intervention/image": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0|^11.0",
        "orchestra/testbench": "^9.0|^10.0"
    },
    "autoload": {
        "psr-4": {
            "Melsaka\\ImageManager\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Melsaka\\ImageManager\\ImageManagerServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}